version: "3"
services:
  LokDabMUX:
    image: lokdabmux
    build:
      context: ./
      dockerfile: https://raw.githubusercontent.com/pepisp/dabmod_docker/master/Dockerfile_DabMux
    volumes:
      - ~/muxconf:/usr/odrdab
    ports:
      - 8282:8181
    restart: always
    networks:
      lokdabmux_net:
        ipv4_address: 172.100.100.2
  AudioEnc4:
    image: lokdabenc
    build:
      context: ./
      dockerfile: https://raw.githubusercontent.com/pepisp/dabmod_docker/master/Dockerfile_DabAudioEnc
    restart: always
    networks:
      lokdabmux_net:
        ipv4_address: 172.100.100.5
    command: odr-audioenc -v http://stream4.nadaje.com:9220/ram -o tcp://LokDabMux:9004 -l -r 48000 -b 96 -VVV





networks:
  lokdabmux_net:
    driver: bridge
    ipam:
      driver: default
      config:
        - subnet: 172.100.100.0/24
